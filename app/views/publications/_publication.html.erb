<div id="<%= dom_id publication %>" class="max-w-sm mx-auto bg-brown-500 shadow-lg rounded-lg overflow-hidden mb-6">
  <div class="relative">
    <% if publication.image.attached? %>
      <%= image_tag(publication.image, alt: publication.title, class: "w-full h-48 object-cover") %>
    <% else %>
      <div class="w-full h-48 bg-gray-300 flex items-center justify-center text-gray-600">
        <em>No image available</em>
      </div>
    <% end %>
  </div>

  <div class="p-4">
    <h2 class="text-xl font-semibold  mb-2"><%= publication.title %></h2>

    <p class="text-sm mb-2">
      <strong><%= t('activerecord.attributes.publication.category') %>:</strong>
      <%= publication.category %>
    </p>

    <p class="text-sm mb-4">
      <strong><%= t('activerecord.attributes.publication.publication') %>:</strong>
      <%= publication.description %>
    </p>
    
    <p class="text-sm">
      <strong><%= t('activerecord.attributes.publication.image') %>:</strong>
      <% if publication.image.attached? %>
        <%= image_tag(publication.image, alt: publication.title, class: "w-16 h-16 object-cover rounded-full") %>
      <% else %>
        <em>No image available</em>
      <% end %>
    </p>
  </div>
</div>
