<%= form_with(model: publication) do |form| %>
  <% if @publication.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-lg">
      <h2 class="font-bold text-lg"><%= pluralize(@publication.errors.count, "error") %> prohibieron que esta publicación fuera guardada:</h2>
      <ul class="list-disc pl-5">
        <% @publication.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Formulario con fondo café claro -->
  <div class="bg-brown-100 p-6 rounded-lg shadow-lg">
    <div class="mb-4">
      <%= form.label :title, style: "display: block", class: "text-brown-700 font-semibold" %>
      <%= form.text_field :title, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown-500 focus:outline-none" %>
    </div>

    <div class="mb-4">
      <%= form.label :category, style: "display: block", class: "text-brown-700 font-semibold" %>
      <%= form.text_field :category, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown-500 focus:outline-none" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, style: "display: block", class: "text-brown-700 font-semibold" %>
      <%= form.textarea :description, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown-500 focus:outline-none" %>
    </div>

    <div class="mb-4">
      <%= form.label :image, style: "display: block", class: "text-brown-700 font-semibold" %>
      <%= form.file_field :image, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brown-500 focus:outline-none" %>
    </div>

    <div class="actions">
      <%= form.submit t('helpers.submit.create', model: t('activerecord.models.publication')), class: "bg-brown-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-brown-700 focus:outline-none focus:ring-2 focus:ring-brown-500" %>
    </div>
  </div>
<% end %>
